<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Warna background -->
    <solid android:color="@android:color/white" />

    <!-- Border -->
    <stroke
        android:width="1dp"
        android:color="@color/umn_blue" />

    <!-- Sudut membulat -->
    <corners android:radius="12dp" />

    <!-- Sedikit bayangan (efek elevasi kecil di beberapa device) -->
    <padding
        android:left="8dp"
        android:top="4dp"
        android:right="8dp"
        android:bottom="4dp" />
</shape>
