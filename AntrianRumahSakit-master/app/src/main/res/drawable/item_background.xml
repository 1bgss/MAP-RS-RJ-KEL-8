<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Warna background putih dengan bayangan halus -->
    <solid android:color="@color/white" />

    <!-- Sudut membulat -->
    <corners android:radius="12dp" />

    <!-- Garis tepi tipis -->
    <stroke
        android:width="1dp"
        android:color="@color/gray_light" />

    <!-- Sedikit bayangan biar lebih modern -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>
