<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card:cardCornerRadius="12dp"
    android:layout_margin="8dp">

    <RelativeLayout
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvTicketId"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="18sp"
            android:background="@drawable/circle_bg"
            android:textColor="@android:color/white"/>

        <LinearLayout
            android:layout_toEndOf="@id/tvTicketId"
            android:layout_marginStart="12dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvName"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <!-- Tambahan baru untuk kode rekam medis -->
            <TextView
                android:id="@+id/tvMedicalId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/darker_gray"
                android:textSize="12sp"/>

            <!-- ðŸ”¹ Tambahan baru untuk kategori pasien -->
            <TextView
                android:id="@+id/tvCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:padding="4dp"
                android:text="Category"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:background="@drawable/category_bg"/>

            <TextView
                android:id="@+id/tvComplaint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp">

                <TextView
                    android:id="@+id/tvPoli"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="italic"/>

                <TextView
                    android:id="@+id/tvDokter"
                    android:layout_marginStart="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="italic"/>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tvEta"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-- min"
            android:textStyle="bold"
            android:padding="6dp"/>

        <TextView
            android:id="@+id/tvStatus"
            android:layout_below="@id/tvEta"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:text="WAIT"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>
